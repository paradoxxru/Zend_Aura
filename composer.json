		"aura/router": "^3.1",
		"roave/security-advisories": "dev-master",
		"zendframework/zend-diactoros": "^2.1",
		"zendframework/zend-httphandlerrunner": "^1.1"
	},
	"require-dev": {
		"phpunit/phpunit" : "^8.4"
	},
	"autoload": {
